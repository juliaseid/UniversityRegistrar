@{
  Layout = "_Layout";
}

@model University.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title) @Html.DisplayFor(model => model.Number)</h3>

@if(@Model.Students.Count == 0)
{
  <p>There are no students enrolled in this course!</p>
}
else
{
  <h4>Students enrolled in this course:</h4>
  <ul>
  @foreach(var join in Model.Students)
  {
    <li>@join.Student.FirstName @join.Student.LastName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Enroll Students", "AddStudent", new {id = Model.CourseId})</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Back to Courses", "Index")</p>