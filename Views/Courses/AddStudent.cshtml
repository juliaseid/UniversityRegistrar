@{
  Layout = "_Layout";
}

@model University.Models.Course

<h2>Add a Student</h2>

<h4>Add a student to this course: @Html.DisplayFor(model => model.Title) @Html.DisplayFor(model => model.Number)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)

    @Html.Label("Select Student")
    @Html.DropDownList("StudentId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Course List", "Index")</p>